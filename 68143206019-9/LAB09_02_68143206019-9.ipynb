    "def circle(r) :\n",
    "    return 3.14159 * (r ** 2)\n",
    "def triangle(b,h) :\n",
    "    return (b * h) / 2\n",
    "R = float(input(\"รัศมี\"))\n",
    "area = circle(r=R)\n",
    "print(f\"พื้นที่วงกลม : {area}\")\n",
    "B = float(input(\"ฐาน\"))\n",
    "H = float(input(\"สูง\"))\n",
    "area = triangle(b=B,h=H)\n",
    "print(f\"พื้นที่สามเหลี่ยม : {area}\")"
   ]
